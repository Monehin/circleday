{
  "name": "circleday",
  "version": "0.1.0",
  "private": true,
  "description": "Never miss a celebration",
  "scripts": {
    "dev": "concurrently -n \"next,worker\" -c \"cyan,magenta\" \"next dev\" \"npm run temporal:worker\"",
    "dev:next": "next dev",
    "dev:worker": "tsx scripts/temporal-worker.ts",
    "dev:all": "npm run temporal:start && npm run dev",
    "seed:demo": "tsx prisma/seeds/group-types-demo.ts",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "postinstall": "prisma generate",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "vitest run && playwright test",
    "temporal:start": "cd ../temporal-local && docker-compose up -d",
    "temporal:stop": "cd ../temporal-local && docker-compose down",
    "temporal:restart": "cd ../temporal-local && docker-compose restart",
    "temporal:logs": "cd ../temporal-local && docker-compose logs -f",
    "temporal:ui": "open http://localhost:8080",
    "temporal:status": "cd ../temporal-local && docker-compose ps",
    "temporal:worker": "tsx scripts/temporal-worker.ts",
    "temporal:test": "tsx scripts/test-workflow.ts",
    "temporal:test-reminder": "tsx scripts/test-reminder-workflow.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^6.18.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@react-email/components": "^0.5.7",
    "@react-email/render": "^1.4.0",
    "@temporalio/activity": "^1.13.1",
    "@temporalio/client": "^1.13.1",
    "@temporalio/worker": "^1.13.1",
    "@temporalio/workflow": "^1.13.1",
    "@upstash/ratelimit": "^2.0.6",
    "@upstash/redis": "^1.35.6",
    "better-auth": "^1.3.34",
    "canvas-confetti": "^1.9.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.23.24",
    "gsap": "^3.13.0",
    "lucide-react": "^0.552.0",
    "next": "16.0.7",
    "next-themes": "^0.4.6",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-email": "^4.3.2",
    "react-hook-form": "^7.66.0",
    "react-hot-toast": "^2.6.0",
    "resend": "^6.4.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "twilio": "^5.10.4",
    "@js-temporal/polyfill": "^0.5.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@temporalio/testing": "^1.13.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/ui": "^4.0.6",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "16.0.7",
    "jsdom": "^27.1.0",
    "msw": "^2.11.6",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "prisma": "^6.18.0",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.20.6",
    "typescript": "^5.6",
    "vitest": "^4.0.6"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
